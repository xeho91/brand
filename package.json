{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"version": "0.0.0",
	"author": {
		"name": "Mateusz Kadlubowski",
		"email": "xeho91@pm.me",
		"url": "https://xeho91.com"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "pnpm@8.3.1",
	"optionalDependencies": {
		"concurrently": "8.2.0",
		"del-cli": "5.0.0",
		"husky": "8.0.3",
		"lint-staged": "13.2.2"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.4.8",
		"@changesets/cli": "2.26.1",
		"@terminal-nerds/browserslist-config": "0.3.1",
		"@terminal-nerds/eslint-config": "0.25.0",
		"@terminal-nerds/lint-staged-config": "0.5.0",
		"@terminal-nerds/markdownlint-config": "0.10.0",
		"@terminal-nerds/prettier-config": "0.13.0",
		"@terminal-nerds/syncpack-config": "0.7.0",
		"@terminal-nerds/tsup-config": "0.5.0",
		"@terminal-nerds/typescript-config": "0.7.0",
		"@terminal-nerds/vitest-config": "0.10.0",
		"@types/node": "20.3.1",
		"browserslist": "4.21.9",
		"del-cli": "5.0.0",
		"depcheck": "1.4.3",
		"eslint": "8.43.0",
		"markdownlint-cli": "0.35.0",
		"prettier": "2.8.8",
		"pretty-quick": "3.1.3",
		"syncpack": "10.6.1",
		"tsup": "7.0.0",
		"tsx": "3.12.7",
		"turbo": "1.10.4",
		"typescript": "5.1.3",
		"vitest": "0.32.2"
	},
	"scripts": {
		"build:pkgs": "turbo run build",
		"changelog": "pnpm changeset add",
		"clean": "concurrently \"pnpm:clean:*\" --group --timings",
		"clean:cache": "del \"./node_modules/.cache\"",
		"clean:test": "del \"./coverage\"",
		"dev:pkgs": "turbo run dev",
		"dev:test": "vitest watch --dir \"./packages\" --ui",
		"fix": "concurrently \"pnpm:fix:*\" --group --timings",
		"fix:format": "pretty-quick --branch main --pattern \"**/*\" --verbose",
		"fix:js": "pnpm lint:js --fix",
		"fix:md": "pnpm lint:md --fix",
		"fix:pkg": "syncpack format ; syncpack fix-mismatches",
		"lint": "concurrently \"pnpm:lint:*\" --group --timings",
		"lint:deps": "depcheck",
		"lint:format": "pnpm fix:format --check",
		"lint:js": "DEBUG=\"eslint:cli-engine\" eslint . --cache --cache-location \"./node_modules/.cache/eslint\" --ext .cjs,.js,.jsx,.mjs,.ts,.tsx,.json,.yml,.yaml",
		"lint:md": "markdownlint . --dot --ignore-path \"./.gitignore\"",
		"lint:pkg": "syncpack list-mismatches",
		"lint:staged": "lint-staged --verbose",
		"lint:types": "tsc --noEmit",
		"preinstall": "npx only-allow pnpm",
		"prepare": "husky install",
		"supported": "browserslist",
		"test:unit": "vitest run --dir \"./packages\""
	}
}
